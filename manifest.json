{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "0.1.0",
  "icons": {
    "48": "assets/icon.svg",
    "96": "assets/icon.svg"
  },
  "applications": {
    "gecko": {
      "id": "tabments@icefla.me"
    }
  },

  "permissions": [
    "tabs",
    "tabHide",
    "storage",
    "sessions"
  ],

  "background": {
    "page": "background/background.html"
  },

  "browser_action": {
    "default_icon": "assets/icon.svg",
    "default_popup": "popup/popup.html"
  }
}
